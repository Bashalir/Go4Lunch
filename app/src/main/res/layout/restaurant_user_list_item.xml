<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurant_item_cl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/activity_restaurant_item_photo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/default_resto"
        app:layout_constraintLeft_toLeftOf="@id/activity_restaurant_item_cl"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/activity_restaurant_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="The winter is joining !"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/activity_restaurant_item_photo_iv"
        app:layout_constraintLeft_toRightOf="@id/activity_restaurant_item_photo_iv"
        app:layout_constraintBottom_toBottomOf="@id/activity_restaurant_item_photo_iv"/>

</android.support.constraint.ConstraintLayout>